<!-- Sign-up -->
<div class="login">
    <div class="login-contain">
        <div class="contain-left">
            <div class="text-start">
                <h1>Sign up for free</h1>
                <p>It's quick and easy</p>
            </div>
            <div class="text-end">
                <p>Already have an account? <a href="/login">Log in</a></p>
            </div>
        </div>
        <div class="contain-right">
            <form action="" class="logIn">
                <div class="login-title"> 
                    <h2>Sign up for free</h2>
                    <p>Already have an account? <a href="/login">Log in</a></p>
                </div>
                <div class="Email">
                    <label for="email">E-mail address</label>
                    <input type="email" id="email" placeholder="E-mail address">
                    <p class="error-email">Enter the email address.</p>
                    <p class="error-email-incorrect">Your e-mail address must be in the folowing format: nombre@dominio.com</p>
                    
                </div>
                <div class="phone">
                    <label for="phone">Cell phone</label>
                    <input type="tel" id="phone" placeholder="Cell phone">
                    <p class="error-phone">enter the phone number you use to access your account and change your password.</p>

                </div>
                <div class="password">
                    <div class="label-forgot">
                        <label for="password">New password</label>
                    </div>
                    <input type="password" id="password" placeholder="New password">
                    <p class="error-password">Enter your password</p>
                    <p class="error-password-Incorrect">Enter a combination of at least six number, letters, and punctuation marks (such as ! and &)</p>
                </div>
                <p class="contract">By singing in, I agree <a href="#Privace-Policy">Bufé's Privacy Policy</a> and <a href="#Terms-Services">Term of Service</a></p>
                <input class="login-button" type="submit" value="Register">
                <div class="logIn-alternative">
                    <p class="login-with">Login with</p>
                    <div class="alternative">
                        <a href="#sso" class="sso">
                            <i class='bx bxs-key'></i>
                            <p>SSO</p>
                        </a>
                        <a href="#Apple" class="apple">
                            <i class='bx bxl-apple'></i>
                            <p>Apple</p>
                        </a>
                        <a href="#google" class="google">
                            <i class='bx bxl-google'></i>
                            <p>Google</p>
                        </a>
                        <a href="#facebook" class="facebook">
                            <i class='bx bxl-facebook-circle'></i>
                            <p>Facebook</p>
                        </a>
                    </div>
                </div>
                <div class="login-footer">
                    <span>Bufé is protected by reCAPTCHA and its <a href="#Privace-Policy">Privacy Policy</a>  and <a href="#Terms-Services">Terms of Service</a> apply.</span>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- end Sign-up -->
